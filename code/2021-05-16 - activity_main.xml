<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:scrollbars="horizontal|vertical">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/txt_datum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Datum"
                android:textSize="15dp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/kais_blog_logo_512" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/txt_welcome_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Kais Blog"
                android:textSize="20dp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/txt_welcome_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Information Center"
                android:textSize="15dp" />
        </TableRow>
#
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">



        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/imv_blog"
                android:layout_width="10dp"
                android:layout_height="100dp"
                android:layout_weight=""
                android:clickable="true"
                android:padding="5dp"
                android:src="@mipmap/minimalist_ui_blog" />

            <ImageView
                android:id="@+id/imv_apps"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:clickable="true"
                android:padding="5dp"
                android:src="@mipmap/minimalist_ui_anwendungen" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:textColor="#FFF">

            <TextView
                android:id="@+id/txt_blog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Blog News" />

            <TextView
                android:id="@+id/txt_apps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Anwendungen" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/imv_website"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:clickable="true"
                android:padding="5dp"
                android:src="@mipmap/minimalist_ui_webseiten" />

            <ImageView
                android:id="@+id/imv_social"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:clickable="true"
                android:padding="5dp"
                android:src="@mipmap/minimalist_ui_social" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:textColor="#FFF">

            <TextView
                android:id="@+id/txt_website"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Website" />

            <TextView
                android:id="@+id/txt_social"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Social" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:textColor="#FFF">

            <ImageView
                android:id="@+id/imv_kontakt"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:clickable="true"
                android:padding="5dp"
                android:src="@mipmap/minimalist_ui_kontakt" />

            <ImageView
                android:id="@+id/imv_impressum"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:clickable="true"
                android:padding="10dp"
                android:src="@mipmap/minimalist_ui_impressum" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:textColor="#FFF">

            <TextView
                android:id="@+id/txt_kontakt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Kontakt" />

            <TextView
                android:id="@+id/txt_impressum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="impressum" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:textColor="#FFF">

            <TextView
                android:id="@+id/leerezeile_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=" "
                android:textSize="10dp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:textColor="#FFF">

            <TextView
                android:id="@+id/leerzeile_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=" "
                android:textSize="10dp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:textColor="#FFF">

            <TextView
                android:id="@+id/leerzeile_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=""
                android:textSize="10dp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:textColor="#FFF">

            <TextView
                android:id="@+id/txt_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Version 14-1.3.0.2021-05-03"
                android:textSize="15dp" />
        </TableRow>


    </TableLayout>

</LinearLayout>
